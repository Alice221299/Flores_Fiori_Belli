mixin ordenar 
  .ordenar
    .por-defecto
      div Orden por defecto 
      span.arrow
    .opening-menu.inactive-orden  
      ul 
        li Orden por defecto 
        li Orden por popularidad 
        li Orden por precio: bajo a alto 
        li Orden por precio: alto a bajo 
mixin box(image, name, price)
  .box
    figure 
      img(src="/Images/"+image, alt=name)
    p.name=name 
    p.price=price
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/catalogo.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Alice&family=Montserrat:wght@300;400;500;700&display=swap")
    title Catálogo
  body 
    header 
      section.header_first-section
        .header_contacts-container-main 
          .header_contacts-container-left
            div 
              span.phone 
              a(href="") +57 301 7771589 
            div 
              span.mail 
              a(href="") contacto@floresfioribelli.com
            span.facebook 
            span.instagram 
          .shopping-cart 
            span.shopping-cart_img 
            a(href="") 0 elementos
        span.header_logo  
        .header_menu-bar 
          p Seleccionar página
          span.menu 
        .header_menu-mobile.inactive
          a(href="") Inicio 
          a(href="") Catálogo
          a(href="") Cómo funciona
          a(href="") Blog 
          a(href="") Nosotros 
      section.header_second-section 
        h1 Catálogo
        p Sólo usamos flores frescas en nuestra colección de arreglos diseñados pensando en ti
      .header_aviso 
        p Envío gratuito en todos los arreglos y bouquets
    main 
      section.main_first-section 
        .arreglos 
          h2 Arreglos
          hr
          .info 
            p Mostrando los 9 resultados
            +ordenar
          .main__arreglos-container
            +box("black-flowers.jpg", "Cascata", "$199,000")
            +box("bouquet-pink.jpg", "Ringraziamento", "$132,000")
            +box("different-roses.jpg", "Piccola Primavera", "$123,000")
            +box("flowers-white-vase.jpg", "Piccolo Amore", "$116,000")
            +box("globe-with-flowers.jpg", "Primavera Bianca", "$137,000")
            +box("pink-flower.jpg", "Piccolo fascino", "$100,000")
            +box("pink-flowers-table.jpg", "Scattola", "$207,000")
            +box("pink-roses.jpg", "Piccolo Roce", "$90,000")
            +box("pot-flowers.jpg", "Tenerezza", "$135,000")
        .bouquet
          h2 Bouquet
          hr
          .info 
            p Mostrando los 5 resultados
            +ordenar
          .main__bouquet-container
            +box("black-flowers.jpg", "Alba", "$102,000")
            +box("bouquet-pink.jpg", "Prisma", "$90,000")
            +box("different-roses.jpg", "Secola", "$312,000")
            +box("flowers-white-vase.jpg", "Piccolo Rosa", "$91,000")
            +box("globe-with-flowers.jpg", "Rosa", "$105,000")
        .adiciones
          h2 Adiciones
          hr
          .info 
            p Mostrando el único resultados
            +ordenar
          .main__adiciones-container
            +box("black-flowers.jpg", "Torta de Chocolate", "$40,000")
      section.main_second-section
        h3 Arreglos para bodas en Chía, Cajicá, Cota y Bogotá
        div 
          p 25% 
          p off 
        p.text Decora tu boda con nuestros arreglos a un precio especial para un día tan especial
      section.main_third-section 
        div 
          p.message «Buen servicio, el arreglo llegó el día que lo pedí y las flores están hermosas»
          h3 Giovanny
        div 
          p.message «Compre un arreglo para el día de la madre. Hermoso mi mamá quedó encantada»
          h3 Nicolas Forero
        div 
          p.message «Me gustó el arreglo, buena atención al cliente»
          h3 María Eugenia
      section.main_fourth-section 
        img(src="/Images/grey-background-form.jpg", alt="Son hojas de las flores")
        h2 Arreglos a la medida
        hr
        p ¿Tienes algo en mente? Contactanos y hacemos un arreglo según tus necesidades
        
        form(action="")
          label(for="name") 
            input(type="text" placeholder="Nombre" id="name" name="name")
          label(for="email") 
            input(type="email" placeholder="Correo" id="email" name="email")
          label(for="help") 
            textarea(name="help" id="help" cols="30" rows="7" placeholder="Cómo podemos ayudarte...")
        button.form_button Enviar solicitud
          span.button_arrow
        button.whatsapp_button Whatsapp
      section.main_fifth-section 
        p Envíamos flores frescas y llenas de vida a Chía, Cota y Cajicá!
    footer 
      section.footer_first-section 
        ul 
          li: a(href="") Aviso Legal 
          li: a(href="") Política de Privacidad
          li: a(href="") Política de Cookies
      section.footer_second-section 
        span.footer_facebook
        span.footer_instagram 
        p Derechos reservados Flores Fiori Belli 2021 - Desarrollo y posicionamiento por BluKaizen Media.
script(src="/catalogo.js") 

